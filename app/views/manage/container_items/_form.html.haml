= form_for @container_item, html: { class: "form container_item" } do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)

  .form-group
    = f.label :address, 'Straße und Hausnummer'
    = f.text_field :address, class: 'form-control'
    = f.error_span(:address)

  .form-group
    = f.label :city, 'Stadt'
    = f.text_field :city, class: 'form-control'
    = f.error_span(:city)

  .form-group
    = f.label :zip, 'PLZ'
    = f.text_field :zip, class: 'form-control'
    = f.error_span(:zip)

  .form-group
    = f.label :parent_id, 'Übergeordnete Gruppe'
    = f.select :parent_id, current_account.container_items.reject { |ci| ci == @container_item }.map { |ci| [ci.name, ci.id] }, { include_blank: true, selected: @container_item.parent_id}, class: 'form-control'

  = f.submit 'Speichern',class: 'btn btn-primary'
