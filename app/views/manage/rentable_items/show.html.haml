.thumbnail
  - if @rentable_item.images.any?
    %a.edit-rentable-item{ href: '#', "data-rentable-item-id" => @rentable_item.id }
      %img{ src: @rentable_item.images.first.image.url(:medium), alt: 'Wohnung', style: 'margin-bottom: 15px;' }
  .caption(style='padding-top: 0;')
    %table.table
      %tr
        %th(colspan=3)
          %a.edit-rentable-item{ href: '#', "data-rentable-item-id" => @rentable_item.id}
            %h4= @rentable_item.ad_name
            %p= truncate(strip_tags(@rentable_item.description), :length => 60, :separator => ' ')
      %tr
        %th
          %strong= number_to_currency @rentable_item.price

          &middot;

          %strong= @rentable_item.size
          m&sup2;

          &middot;

          Ab
          %strong= I18n.l @rentable_item.earliest_available

      %tr
        %th
          = @rentable_item.full_address
